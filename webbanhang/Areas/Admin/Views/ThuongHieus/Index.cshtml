@model IEnumerable<webbanhang.Models.ThuongHieu>

@{
    ViewData["Title"] = "Index";
    var i = 1;
}

<div class="container-fluid" id="container-wrapper">
    <h1>Danh sách thương hiệu</h1>

    <a role="button" data-bs-toggle="modal" data-bs-target="#modalCreate" class="btn btn-danger mb-1 text-white">Thêm mới</a>

    <div class="modal fade" id="modalCreate" tabindex="-1" aria-labelledby="modalCreateLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="text-center mb-2">
                        <span class="fw-bold fs-3" style="color:#fc544b">Thêm thương hiệu</span>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="p-2">
                        <form asp-action="Create" enctype="multipart/form-data">
                            <div class="form-group mb-3">
                                <label class="control-label mb-1">Tên thương hiệu</label>
                                <input type="text" name="TenThuongHieu" class="form-control" />
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Thêm" class="btn btn-danger" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 mb-4">
            <table class="table">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>
                            Tên thương hiệu
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(i++)</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TenThuongHieu)
                            </td>
                            <td>
                                <a class="btn bg-gradient-danger" role="button" data-bs-toggle="modal" data-bs-target="#modalDelete@(i)">
                                    <i class="fa-solid fa-trash text-white"></i>
                                </a>
                                <div class="modal fade" id="modalDelete@(i)" tabindex="-1" aria-labelledby="modalDeleteLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h1 class="modal-title fs-5" id="exampleModalLabel">Bạn có chắc chắn xóa?</h1>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-footer">
                                                <a href="/Admin/ThuongHieus/Delete/@item.ThuongHieuID" role="button" class="btn btn-danger">Xóa</a>
                                                <a role="button" class="btn btn-secondary text-white" data-bs-dismiss="modal">Hủy bỏ</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>

</div>
