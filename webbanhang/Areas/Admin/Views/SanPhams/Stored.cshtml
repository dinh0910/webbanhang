@model IEnumerable<webbanhang.Models.NhapHang>

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Danh sách sản phẩm</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a class="text-danger" href="/admin">Dashboard</a></li>
            <li class="breadcrumb-item"><a class="text-danger" asp-controller="SanPhams" asp-action="Index">Sản phẩm</a></li>
            <li class="breadcrumb-item active" aria-current="page">Kho</li>
        </ol>
    </div>

    <a role="button" asp-controller="SanPhams" asp-action="ViewImport" class="btn btn-danger mb-3 ms-3 text-white">Danh sách nhập hàng</a>

    <div class="row">
        <div class="col-lg-12">
            <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Sản phẩm</h6>
                </div>
                <div class="table-responsive p-3">
                    <table class="table table-hover mb-5" id="dataTableHover">
                        <thead class="thead-light">
                            <tr>
                                <th>

                                </th>
                                <th>
                                    Ngày lập
                                </th>
                                <th>
                                    Người lập
                                </th>
                                <th>
                                    Nhà cung cấp
                                </th>
                                <th>
                                    Tổng tiền
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th>
                                        <a class="btn btn-primary" asp-controller="SanPhams" asp-action="DetailImport" asp-route-id="@item.NhapHangID">
                                            <i class="fa-solid fa-circle-info"></i>
                                        </a>
                                    </th>
                                    <th>@Html.DisplayFor(modelItem => item.NgayLap)</th>
                                    <th>@item.TaiKhoan.TenTaiKhoan</th>
                                    <th>@item.NhaCungCap.Ten</th>
                                    <th>@Html.DisplayFor(modelItem => item.TongTien)</th>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>