@model webbanhang.Models.SanPham

@{
    ViewData["Title"] = "Details";
    var ts = ViewBag.thongso as IQueryable<webbanhang.Models.ThongSo>;
    var i = 1;
    var j = 1;
}

<div class="row">
    <div class="col-lg-6">
        <div class="card mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Thông số sản phẩm @Model.TenSanPham</h6>
            </div>
            <div class="table-responsive p-3">
                <table class="table align-items-center table-flush" id="dataTable">
                    <thead class="thead-light">
                        <tr>
                            <th>#</th>
                            <th>Tên thông số</th>
                            <th>Nội dung</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in ts){
                            if (item.SanPhamID == Model.SanPhamID)
                            {
                                <tr>
                                    <td>@(
                                        i++
                                        )</td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-lg-6">

    </div>
</div>