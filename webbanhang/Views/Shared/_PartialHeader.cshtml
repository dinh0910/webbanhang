@{
    var dm = ViewBag.danhmuc as IQueryable<webbanhang.Models.DanhMuc>;
    var th = ViewBag.thuonghieu as IQueryable<webbanhang.Models.ThuongHieu>;
}

<header class="section-header" style="background-color: #FC544B;">
    <section class="header-main border-bottom">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-xl-2">
                    <a href="/" class="brand-wrap">
                        <img src="~/Content/images/logo.jpg" width="100" height="50" />

                    </a> <!-- brand-wrap.// -->
                </div>
                <div class="col-xl-6">
                    <form action="#" class="search-header">
                        <div class="input-group w-100">
                            <input type="text" class="form-control " placeholder="Bạn muốn tìm sản phẩm?">
                            <div class="input-group-append">
                                <button class="btn btn-danger" type="submit">
                                    <i class="fa fa-search "></i> Tìm kiếm
                                </button>
                            </div>
                        </div>
                    </form> <!-- search-wrap .end// -->
                </div> <!-- col.// -->
                <div class="col-xl-4">
                    <div class="widgets-wrap float-md-right">
                        <div class="widget-header mr-3">
                            <a href="#" class="widget-view">
                                <div class="icon-area">
                                    <i class="fa fa-comment-dots text-white"></i>
                                    <span class="notify">1</span>
                                </div>
                                @*<small class="text-white"> Tin nhắn </small>*@
                            </a>
                        </div>
                        <div class="widget-header mr-3">
                            <a href="#" class="widget-view">
                                <div class="icon-area">
                                    <i class="fa fa-store text-white"></i>
                                </div>
                                @*<small class="text-white"> Đơn hàng </small>*@
                            </a>
                        </div>
                        <div class="widget-header mr-3">
                            <a href="#" class="widget-view">
                                <div class="icon-area">
                                    <i class="fa fa-shopping-cart text-white"></i>
                                </div>
                                @*<small class="text-white"> Giỏ hàng </small>*@
                            </a>
                        </div>
                        <div class="widget-header">
                            <a href="home/login" class="widget-view">
                                <div class="icon-area">
                                    <i class="fa fa-user text-white"></i>
                                </div>
                                @*<a href="#">Trang Admin</a>
                                <a hrel="~/Home/Logout"> Logout </a>*@
                                <span class="text-white">Đăng nhập</span>
                                @*<small class="text-white"> Thông tin của tôi </small>*@
                            </a>
                        </div>
                    </div> <!-- widgets-wrap.// -->
                </div> <!-- col.// -->
            </div> <!-- row.// -->
        </div> <!-- container.// -->
    </section> <!-- header-main .// -->


    <nav class="navbar navbar-main navbar-expand-lg border-bottom">
        <div class="container">

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main_nav" aria-controls="main_nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="main_nav">
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-danger" data-toggle="dropdown" href="#">Tìm theo danh mục</a>
                        <div class="dropdown-menu">
                            @foreach(var item in dm){
                                <a class="dropdown-item" asp-action="Category" asp-route-id="@item.DanhMucID">@item.TenDanhMuc</a>
                            }
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-danger" data-toggle="dropdown" href="#">Tìm theo hãng</a>
                        <div class="dropdown-menu">
                            @foreach(var item in th){
                                <a class="dropdown-item" asp-action="TradeMark" asp-route-id="@item.ThuongHieuID">@item.TenThuongHieu</a>
                            }
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-danger" href="#">Mua máy kèm gói cước</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-danger" href="#">Trả góp</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-danger" href="#">Mua online giá rẻ</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-danger" data-toggle="dropdown" href="#">Tin tức</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="#">Tin khuyến mãi</a>
                            <a class="dropdown-item" href="#">Tin dịch vụ</a>
                            <a class="dropdown-item" href="#">Tin công nghệ</a>
                            <a class="dropdown-item" href="#">Thủ thuật</a>
                            <a class="dropdown-item" href="#">Game/Ứng dụng hay</a>
                        </div>
                    </li>
                </ul>

            </div> <!-- collapse .// -->
        </div> <!-- container .// -->
    </nav>
</header>