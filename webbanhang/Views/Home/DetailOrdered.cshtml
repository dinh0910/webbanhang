@model IEnumerable<webbanhang.Models.ChiTietDH>

@{
    int i = 0;
}

<div class="section-content padding-y">
    <div class="container">
        <section class="py-3 bg-light">
            <div class="container">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Ordered">Đơn hàng của tôi</a></li>
                    <li class="breadcrumb-item acvite" aria-current="page">Đơn hàng của tôi</li>
                </ol>
            </div>
        </section>
    </div

    <section class="py-3">
        <table class="table">
            <thead>
                <tr>
                    <th>Sản phẩm</th>
                    <th>Tên sản phẩm</th>
                    <th>Đơn giá</th>
                    <th>Số lượng</th>
                    <th>Thành tiền</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model){
                    i += item.SanPham.ThanhTien;
                    <tr>
                        <td>
                            <img src="~/images/products/@item.SanPham.HinhAnh" />
                        </td>
                        <td>@item.SanPham.TenSanPham</td>
                        <td>@Html.DisplayFor(modelItem => item.SanPham.DonGia)</td>
                        <td>@item.SoLuong</td>
                        <td>@Html.DisplayFor(modelItem => item.SanPham.ThanhTien)</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="row">
            <div class="offset-8 col-4">
                <div class="border shadow-lg rounded">
                    <div class="p-4">
                        <div class="d-flex">
                            <div class="fw-bold flex-grow-1">Tổng cộng</div>
                            <div>@i.ToString("n0")đ</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>