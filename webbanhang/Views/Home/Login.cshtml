<div class="row my-5">
    <div class="col-3"></div>
    <div class="col-6">
        <div class="border shadow-lg rounded">
            <div class="fw-bold fs-3 text-center pt-3">
                <span style="color: #fc544b;">ĐĂNG NHẬP TÀI KHOẢN</span>
            </div>
            <div class="p-5">
                <form asp-antiforgery="true" action="/Home/Login" method="post">
                    <div class="form-floating mb-3">
                        <input type="text" name="TenTaiKhoan" class="form-control" id="floatingInput" placeholder="Tài khoản" required />
                        <label for="floatingInput">Tài khoản</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="password" name="MatKhau" class="form-control" id="password" placeholder="Nhập mật khẩu của bạn" oninput="checkpd();" required />
                        <label for="password">Mật khẩu</label>
                        <a href="/Home/ChangePassword" class="d-flex flex-row-reverse mt-1 text-decoration-none text-muted" role="button" style="font-size:12px;">
                            Quên mật khẩu?
                        </a>
                    </div>
                    <div class="d-grid">
                        <input type="submit" value="Đăng nhập" class="btn text-white col fw-semibold text-uppercase" style="background-color:#fc544b" />
                    </div>
                </form>
                <hr />
                <span class="text-muted">Bạn chưa có tài khoản? <a asp-action="SignUp" class="text-decoration-none">Đăng ký ngay</a></span>
            </div>
        </div>
    </div>
    <div class="col-3"></div>
</div>