@model List<webbanhang.Models.CartItem>

@{
    int total = 0;
    int amount = 0;
}

<section class="section-content padding-y">
    <div class="container">

        <section class="py-3 bg-light">
            <div class="container">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a asp-action="ViewCart">Giỏ hàng</a></li>
                    <li class="breadcrumb-item acvite" aria-current="page">Tiến hàng đặt hàng</li>
                </ol>
            </div>
        </section>

        <form asp-action="CreateBill">
            <div class="row mt-3">
                <div class="col-6">
                    <div class="mb-3">
                        <label for="hoten" class="form-label">Họ tên</label>
                        <input type="text" class="form-control" id="hoten" placeholder="Nhập họ và tên của bạn" name="HoTen" required>
                    </div>
                    <div class="mb-3">
                        <label for="sdt" class="form-label">Số điện thoại</label>
                        <input type="text" class="form-control" id="sdt" placeholder="Nhập số điện thoại của bạn" name="Sdt" required>
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">Địa chỉ</label>
                        <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Nhập địa chỉ của bạn" name="DiaChi" required>
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlTextarea1" class="form-label">Ghi chú</label>
                        <textarea class="form-control" id="exampleFormControlTextarea1" name="GhiChu" rows="3"></textarea>
                    </div>

                </div>
                <div class="col-5 offset-1">
                    <div class="border shadow-lg rounded">
                        <div class="p-4">
                            <h4 class="text-center text-danger">Chi tiết đơn hàng</h4>
                            <div class="d-flex">
                                @foreach(var item in Model){
                                    <div class="fw-bold">@item.SanPham.TenSanPham</div>
                                    <div class="ms-5"><span>x</span>@item.SoLuong</div>
                                    amount = item.SanPham.ThanhTien * item.SoLuong;
                                    total += amount;
                                    <div class="ms-auto">@(amount.ToString("n0"))đ</div>
                                }
                            </div>
                            <hr />
                            <div><b>Thành tiền: </b><span>@(total.ToString("n0"))đ</span></div>
                            <div class="d-grid p-3">
                                <a type="submit" asp-action="CheckOut" class="btn btn-danger text-uppercase">Tiến hành đặt hàng</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
            
    </div>
</section>